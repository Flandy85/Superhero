<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><% if @team_number > 0 %>Your Superhero Team..<% else %>How many team members do you want? <% end %></h3>
  </div>
  <div class="panel-body">
    <!-- If statment for showing user how many team members they picked -->
    <% if @team_number > 0 %>
      <%= render 'home/show_team' %>
    <% else %>
        <%= render 'home/create_team' %>
    <% end %>
  </div>
  <div class="panel-footer"><%= link_to 'Create a whole Superhero team', home_team_path %></div>
</div>